<div class="content">

    <div class="row">
      <div class="col-md-8">
        <%= simple_form_for ([:managements, @contact, @contact.comments.build]) do |f| %>
        <%= f.input :email, :as => :select, :collection => Contact.all.map{|c| ["#{c.email}, #{c.name}", c.id]} %> 
        <%= f.input :body, as: :ckeditor, input_html: { ckeditor: { toolbar: 'static' } }, label: "Reply"  %>
        <%= f.submit :submit, class: "btn btn-theme" %>
        <% end %>
      </div>
    </div>
  </div>
